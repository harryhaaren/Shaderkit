{
  "lab" : {
    "lab version" : "0.0.1-alpha",
    "name" : "Phong Shader",
    "description" : "Simple Phong shaded teapot",
    "id" : "unique string",
    "revision" : 24,
    "release" : "stable",
    "server" : "glsl-lab.com",
    "category" : "example",
    "dependencies" : {
      "shared" : "unique id of shared",
      "shared-12" : ["unique id of shared", 12]
    },
    "license" : "GPL",
    "author" : "Riku Palom√§ki <riku@palomaki.fi>"
  },
  "objects" : {
    "teapot" : {
      "model" : ["built-in", "teapot"]
    },
    "box" : {
      "model" : ["built-in", "box"]
    }
  },
  "lights" : {
    "light1" : {
      "type" : "direction",
      "ambient" : [0.2, 0.2, 0.2, 1.0],
      "diffuse" : [1.0, 1.0, 1.0, 1.0],
      "specular" : [1.0, 1.0, 1.0, 1.0],
      "direction" : [0.5, 0.5, 0.5]
    }
  },
  "cameras" : {
    "camera1" : {
      "type" : "perspective",
      "fov" : 45,
      "near" : 0.01,
      "far" : 100.0,
      "position" : [10,6,10],
      "target" : [0,-1,0],
      "up" : [0,1,0]
    }
  },
  "shaders" : {
    "phong" : {
      "geometry" : ["default.geom"],
      "fragment" : ["default.frag"],
      "vertex" : ["default.vert"]
    },
    "gaussian-y" : {
      "vertex" : ["post.vert"],
      "fragment" : ["gaussian-y.frag"]
    },
    "gaussian-x" : {
      "vertex" : ["post.vert"],
      "fragment" : ["gaussian-x.frag"]
    }
  },
  "render passes" : [
    {
      "clear" : ["color", "depth"],
      "shader" : "phong",
      "objects" : ["teapot", "box"],
      "viewport" : ["camera", "camera1"],
      "lights" : ["light1"],
      "out" : {
        "depth" : ["renderbuffer"],
        "color0" : ["texture", "image"]
      }
    },
    {
      "shader" : "gaussian-y",
      "viewport" : ["post"],
      "in" : {
        "texture0" : ["texture", "image"]
      },
      "out" : {
        "color0" : ["texture", "image2"]
      }
    },
    {
      "shader" : "gaussian-x",
      "viewport" : ["post"],
      "in" : {
        "texture0" : ["texture", "image2"]
      }
    }
  ]
}
